<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/img_anuncio"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_carrinho"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_anuncio_descricao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/MyTextAppearance"
                android:textColor="#FF76329D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_anuncio_valor"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/MyTextAppearance"
                android:textColor="#FF5D6A80"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tv_anuncio_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="textEnd"
                android:textAppearance="@style/MyTextAppearance"
                android:textColor="#FF5D6A80"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_anuncio_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:textAlignment="textEnd"
                android:text="@string/data_11_02_2018"
                android:fontFamily="@font/roboto_thin_italic"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>